
    <%- include('header')-%>
   
    <div class="center-div" id="login">
        <div class="container w-25 border py-5">
            <div class="title pb-5 text-center">
                <h2 class="font-weight-bold">Login System</h2>
                <span>Log in for the existing user</span>
                <% if(locals.logout){ %> 
                    <div class="alter alert-success text-center">
                        Log out Successfully
                    </div>
                    <% } %> 
            </div>
            <form action="/route/login" method="POST" >
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="email"name="email">
                    <small class="form-text text-muted text-left text-monospace">Register email address</small>
                </div>
                <div class="form-group pt-3">
                    <input type="password" class="form-control" placeholder="password" name="password">
                </div><div class="text-center pt-3">
                    <button type="submit" class="btn btn-success rounded-pill  ">Submit</button></div>
            </form>
        </div>
    </div>


    <%- include('footer')-%>